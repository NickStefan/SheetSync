a
  color white

.btn-tabs
  background-color soft-blue
  border 1px solid bright-blue
  color white  

.tab-menu
  padding-top 10px
  padding-left 10px
  border none
  position fixed
  top 0px
  left 250px
  font-family Quicksand
  font-size 16px
  li
    font-weight bold
    a:hover
      color black
  li.active
    border-bottom 1px solid light-green
    a
      border none
      color white
