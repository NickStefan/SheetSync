      border none
      background-color light-green
      color white

.ribbon
  height 50px
  width 100%
  padding-top 8px
  padding-left 10px
  background-color light-green
  position fixed
  top 50px
  left 250px
  .btn-tabs
    -webkit-box-shadow 2px 2px 2px 0px rgba(0,0,0,0.75)
    font-family Quicksand-Bold

.formula-entry
  position fixed
  top 50px
  left 0px
  span.input-group-addon
    border-radius 0
    padding-left 19px
    padding-right 16px
  input
    border-radius 0

 .no-scroll
   overflow-x hidden










.my-spreadsheet-ribon
  position fixed
  top 0
  left 0
  width 100%
  height 50px
  background-image: -webkit-gradient(
    linear,
    left bottom,
    left top,
    color-stop(0, #DBDBDB),
    color-stop(1, #FCFCFC)
  );
    background-image: -o-linear-gradient(top, #DBDBDB 0%, #FCFCFC 100%);
    background-image: -moz-linear-gradient(top, #DBDBDB 0%, #FCFCFC 100%);
    background-image: -webkit-linear-gradient(top, #DBDBDB 0%, #FCFCFC 100%);
    background-image: -ms-linear-gradient(top, #DBDBDB 0%, #FCFCFC 100%);
    background-image: linear-gradient(to top, #DBDBDB 0%, #FCFCFC 100%);


.my-sidebar-toggle-button
  position fixed
  top 10px
  left 10px


.sidebar 
    -moz-transition left .2s
    -webkit-transition left .2s
    -o-transition left .2s
    transition left .2s
    width 250px
    background-color #585651
    position absolute
    top 84px
    bottom 0px
    left -246px
    padding 10px
    z-index 1000

sidebar button 
  margin 10px


.slide-out 
    -moz-transition left .2s
    -webkit-transition left .2s
    -o-transition left .2s
    transition left .2s
    left 0px
















