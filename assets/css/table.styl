.table-container
  position fixed
  top 84px
  left 5px
  #spreadsheet
    height calc(100vh - 114px)
    width calc(100vw)
    
  .sheet-select
    background-image: -webkit-gradient(
      linear,
      left bottom,
      left top,
      color-stop(0, #DBDBDB),
      color-stop(1, #FCFCFC)
    );
      background-image: -o-linear-gradient(top, #DBDBDB 0%, #FCFCFC 100%);
      background-image: -moz-linear-gradient(top, #DBDBDB 0%, #FCFCFC 100%);
      background-image: -webkit-linear-gradient(top, #DBDBDB 0%, #FCFCFC 100%);
      background-image: -ms-linear-gradient(top, #DBDBDB 0%, #FCFCFC 100%);
      background-image: linear-gradient(to top, #DBDBDB 0%, #FCFCFC 100%);

    li
      a
        color black
        background-color grey
        border-radius 0 
        height 30px
        padding-top 4px
        &:hover
          background-color grey
          border none
    li.active
      a
        height 30px
        padding-top 4px
        &:hover
          background-color white
          color black
  li
    font-weight normal
    a:hover
      color black
  li.active
    border-bottom 1px solid light-green
    a
      border none
      color white
      background-color light-green
    a:hover
      border none
      background-color light-green
      color white

.nav-tabs > li > a 
  margin-right 0
  margin-top 5
  border none
  border radius 0