.wrapper
  padding-left 250px
  transition all 0.4s ease 0s
  &.active
    padding-left 0

.sidebar-wrapper
  font-family Quicksand
  margin-left -250px
  left 250px
  width 250px
  background: -webkit-linear-gradient(left, #121B32 , #1A2E50); /* For Safari 5.1 to 6.0 */
  position fixed
  height 100%
  // overflow-y auto
  z-index 1000
  transition all 0.4s ease 0s
  

.page-content-wrapper
  width 100%

.sidebar-nav
  position absolute
  top 0
  width 250px
  list-style none
  margin 0
  padding 0
  li
    // line-height 40px
    // text-indent 10px
    a
      color #999999
      display block
      text-decoration none
      padding-left 10px
      span
        &:before
          position absolute
          left 0
          color #41484c
          text-align left
          width 20px
          line-height 18px
          font-style bold
  & > .sidebar-brand
    height 65px
    line-height 60px
    font-size 18px
    a
      color #999999
      &:hover
        color #fff
        background none

.sidebar-nav li a:hover,
.sidebar-nav li.active
  color #fff
  background rgba(255,255,255,0.2)
  text-decoration none
  
.sidebar-nav li a:hover.sectionHeader,
  color inherit
  background inherit
  text-decoration none
  
.sidebar-nav li a:hover.sectionFooter,
  color inherit
  background inherit
  text-decoration none


.sidebar-nav li a:active,
.sidebar-nav li a:focus
  text-decoration none

.content-header
  height 65px
  line-height 65px
  h1
    margin 0
    margin-left 20px
    line-height 65px
    display inline-block

.menu-toggle
  text-decoration none

.btn-menu
  color #000

.inset
  padding 20px
  
.project
  span
    text-align left
    width 130px
    font-size 12px
    color white
    font-style
    
  a 
    margin 5px
    padding-left 10px  
    border 1px solid white

 .update
   img
    border-radius 100%
    float left
    // margin 5px 0
    max-width 75px
    transform scale(0.75, 0.75)
    margin auto auto
 
  .share
    padding-left 20px 
    
    button
      float center   

  .sectionHeader
    border-bottom 1px solid gray
    box-shadow 0px 5px 6px -1px rgba(10, 10, 10, 0.95)
   a div
      padding-left 80px
      color white
      padding-bottom 5px
   
     
    
   .sectionFooter
     // border-bottom 1px solid gray   
     box-shadow  0px -4px 6px -1px rgba(10, 10, 10, 0.95)
     box-shadow 0px 5px 6px -1px rgba(10, 10, 10, 0.95)

.sectionHeader.feed
  box-shadow  0px -4px 6px -1px rgba(10, 10, 10, 0.95)
  box-shadow 0px 5px 6px -1px rgba(10, 10, 10, 0.95)

.sectionFooter.feed
  box-shadow  0px -4px 6px -1px rgba(10, 10, 10, 0.95)  
  color white
  padding-left 40px
  font-size 14px
  border-top 1px solid gray
  a:hover
    color inherit
    background inherit
    text-decoration none

    
   
.messsage
    float left
    width 100%
    margin 10px 0
    border-bottom 1px solid #ccc
    p
      font-size 300px
    a:hover
      color #fff
      background rgba(255,255,255,0.2)
      text-decoration none
      p
        font-size 50px
        width 90%
        margin 5px 0 
        line-height 0
        text-indent 0   
     h1
      float right
      color #fff
      margin 5px
      font-weight 300
      font-size 10px

p      
  font-size 10px
  font-weight 200
  width 90%
  margin 5px 0 
  color white

h2
  font-size 14px
  font-weight 400
  margin-top 10px
  color white
  margin-bottom 0
