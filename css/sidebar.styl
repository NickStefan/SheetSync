.wrapper
  padding-left 250px
  transition all 0.4s ease 0s
  &.active
    padding-left 0

.sidebar-wrapper
  margin-left -250px
  left 250px
  width 250px
  // background #121B32
  background: -webkit-linear-gradient(left, #121B32 , #1A2E50); /* For Safari 5.1 to 6.0 */
  background: -o-linear-gradient(right, #121B32, #1A2E50); /* For Opera 11.1 to 12.0 */
  background: -moz-linear-gradient(right, #121B32, #1A2E50); /* For Firefox 3.6 to 15 */
  background: linear-gradient(to right, #121B32 , #1A2E50); /* Standard syntax */
  position fixed
  height 100%
  overflow-y auto
  z-index 1000
  transition all 0.4s ease 0s

.page-content-wrapper
  width 100%

.sidebar-nav
  position absolute
  top 0
  width 250px
  list-style none
  margin 0
  padding 0
  li
    line-height 40px
    text-indent 10px
    a
      color #999999
      display block
      text-decoration none
      padding-left 10px
      span
        &:before
          position absolute
          left 0
          color #41484c
          text-align left
          width 20px
          line-height 18px
          font-style bold
  & > .sidebar-brand
    height 65px
    line-height 60px
    font-size 18px
    a
      color #999999
      &:hover
        color #fff
        background none

.sidebar-nav li a:hover,
.sidebar-nav li.active
  color #fff
  background rgba(255,255,255,0.2)
  text-decoration none

.sidebar-nav li a:active,
.sidebar-nav li a:focus
  text-decoration none

.content-header
  height 65px
  line-height 65px
  h1
    margin 0
    margin-left 20px
    line-height 65px
    display inline-block

.menu-toggle
  text-decoration none

.btn-menu
  color #000

.inset
  padding 20px
  
.project
  span
    text-align left
    width 130px
    font-size 12px
    color white
    font-style
    
  a 
    margin 5px
    padding-left 10px  
    border 1px solid white

 .update
   img
    border-radius 100%
    float left
    margin 10px 0
    transform: scale(0.6, 0.6)
    






